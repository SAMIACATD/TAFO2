@model List<AlimentosTFOQ.Models.GrupoProdutoModel>
@{
    ViewBag.Title = "Cadastro de Grupo de Produto";
}
<style>
    #grid_cadastro > thead > tr th:nth-child(2) {
        width: 110px;
    }

    #grid_cadastro > thead > tr th:nth-child(2) {
        width: 200px;
    }

    #cadastro {
        width: 70%;
        margin: 0 auto;
    }

    #cadastro_cabecalho {
        border-bottom: 1px #dddddd solid;
    }

    #cadastro_conteudo {
        margin-top: 20px;
    }

    #cabecalho_grid {
        margin-bottom: 20px;
    }
</style>
<div id="cadastro">
    <section id="cadastro_cabecalho">
        <h1>@ViewBag.Title</h1>
    </section>
    <section id="cadastro_conteudo">
        <div id="cabeçalho_grid" class="row">

            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-12">
                        <a id="btn_incluir" class="btn btn-success" role="button"><i class="glyphicon glyphicon-plus"></i> incluir</a>

                    </div>
                    <table id="grid_cadastro" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>Ativo</th>
                                <th>Ação</th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                             {
                             <tr>
                                <td>@item.Id</td>
                                <td>@item.Nome</td>
                                <td>@item.Ativo</td>
                              </tr>
                             }

                        </tbody>

                    </table>

                </div>

            </div>

        </div>

    </section>
</div>



